{{#partial "content"}}
    <section>
        <div class="container">
            <div class="edit-entry">
                <h2>Edit Entry</h2>
                <form action="/protected/edit/{{ blogEntry.slug }}" method="post">
                    <label for="title">Title</label>
                    <input type="text" name="title" value={{ blogEntry.title }}><br>
                    <label for="entry">Entry</label>
                    <textarea rows="5" name="entry">{{ blogEntry.entry }}</textarea>
                    <input type="submit" value="Save Entry" class="button">
                    <a href="/{{ blogEntry.slug }}" class="button button-secondary">Cancel</a>
                    <a href="/protected/delete/{{ blogEntry.slug }}" class="button button-secondary">Delete</a>
                </form>
            </div>
        </div>
    </section>
{{/partial}}
{{>base.hbs}}